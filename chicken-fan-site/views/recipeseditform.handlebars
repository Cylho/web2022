<h2> Edit </h2>
<form method="POST">

    <div class="form-group">
        <label for='firstname'>First Name</label>
        <input type=text id='firstname' name='name' class='form-control' value={{person.name}} >
    </div>

    {{!-- This hidden element lets us use the document id --}}
    <input type="hidden" id="id" name="_id" value="{{person._id}}" />


    <button type=submit class="btn btn-primary">Save Changes </button>

      <a href='/recipes/{{person.name}}'><button type=button class="btn btn-outline-danger">Cancel</button>
      </a> 


</form>